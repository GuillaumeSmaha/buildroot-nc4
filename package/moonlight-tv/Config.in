config BR2_PACKAGE_MOONLIGHT_TV
	bool "moonlight-tv"
	depends on BR2_PACKAGE_HAS_LIBEGL && BR2_PACKAGE_HAS_LIBGLES
	select BR2_PACKAGE_SDL2
	select BR2_PACKAGE_SDL2_IMAGE
	select BR2_PACKAGE_LIBCURL
	select BR2_PACKAGE_EXPAT
	select BR2_PACKAGE_FONTCONFIG
	select BR2_PACKAGE_FREETYPE
	select BR2_PACKAGE_LIBPBNJSON
	select BR2_PACKAGE_LIBWEBOSI18N
	select BR2_PACKAGE_PMLOGLIB
	select BR2_PACKAGE_JSON_C
	select BR2_PACKAGE_PULSEAUDIO
	select BR2_PACKAGE_UMEDIASERVER
        select BR2_PACKAGE_SDL2_WEBOS

comment "moonlight-tv needs EGL and OpenGL ES support"
	depends on !BR2_PACKAGE_HAS_LIBEGL || \
		!BR2_PACKAGE_HAS_LIBGLESBR2_PACKAGE_HAS_LIBEGL_WAYLAND
